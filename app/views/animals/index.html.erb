<p id="notice"><%= notice %></p>

<h1>Listing Animals</h1>

<table class="table" >
  <thead>
    <tr>
      <th>Common name</th>
      <th>Latin name</th>
      <th>Kingdom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="animal_list">
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.common_name %></td>
        <td><%= animal.latin_name %></td>
        <td><%= animal.kingdom %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Animal', new_animal_path %> |
<%= link_to 'New Sighting', new_sighting_path %> |
<%= link_to 'View Sightings', sightings_path %>

<hr>
<br>
<p class="form">
  <input class="input_text" type="text" name="animal[common_name]" placeholder="Common Name" id="commonName">
  <input class="input_text" type="text" name="animal[latin_name]" placeholder="Latin Name" id="latinName">
  <input class="input_text" type="text" name="animal[kingdom]" placeholder="Kingdom" id="kingdom">
  <button id="create_new_animal" class="btn btn-default">Create New Animal</button>
</p>
